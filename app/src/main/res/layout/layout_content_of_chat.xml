    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/viewForChat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/grey" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEmoji"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/ic_smile" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@id/ivEmoji"
            android:background="@null"
            android:ems="8"
            android:hint="Type your message"
            android:imeOptions="actionSend"
            android:inputType="textPersonName"
            android:scrollbars="vertical"
            android:visibility="visible" />

        <!--      <androidx.appcompat.widget.AppCompatImageView
                  android:id="@+id/ivCamera"
                  android:layout_width="@dimen/_30sdp"
                  android:layout_height="@dimen/_30sdp"
                  android:layout_centerVertical="true"
                  android:layout_toEndOf="@+id/editTextMessage"
                  android:padding="@dimen/_5sdp"
                  android:src="@drawable/ic_camera" />

              <androidx.appcompat.widget.AppCompatImageView
                  android:id="@+id/ivAttach"
                  android:layout_width="@dimen/_30sdp"
                  android:layout_height="@dimen/_30sdp"
                  android:layout_centerVertical="true"
                  android:layout_toEndOf="@+id/ivCamera"
                  android:padding="@dimen/_5sdp"
                  android:src="@drawable/ic_attachment" />-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/ic_send" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMic"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/ic_mic" />

    </RelativeLayout>
    <!--    </RelativeLayout>-->

    <include
        android:id="@+id/lvForRecorder"
        layout="@layout/layout_for_recoder"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />
</RelativeLayout>