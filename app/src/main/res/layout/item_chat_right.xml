<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPlayer"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity=""
            android:visibility="gone"
            app:cardBackgroundColor="@color/sender_color"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/lvMediaPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMsgTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/halvatic_light"
                        android:text="2:00 PM"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivReadMsg"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/icon_message_read"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivPlayPause"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_play"
                        android:padding="@dimen/_5sdp" />


                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:progress="0"
                        android:progressDrawable="@drawable/seekbar_style"
                        android:saveEnabled="true"
                        android:thumb="@drawable/seekbar_thumb" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPlayerTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/halvatic_light"
                        android:text="2:00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivStop"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:background="@drawable/icon_stop"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rlMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <!--   <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/_5sdp">-->

            <ImageView
                android:id="@+id/ivMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/rlLayout"
                android:layout_alignTop="@id/rlLayout"
                android:layout_alignEnd="@id/rlLayout"
                android:layout_alignBottom="@id/rlLayout"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/rlLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halvatic_light"
                    android:gravity="center_horizontal"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_22sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:singleLine="false"
                    android:text="This is a dummy message"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:id="@+id/llOriginal"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMessage"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOriginal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/halvatic_light"
                        android:text="View Original"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="2dp"
                        android:background="@color/theme_color" />
                </LinearLayout>
            </RelativeLayout>
            <!--            </RelativeLayout>-->
        </RelativeLayout>
    </RelativeLayout>
</layout>